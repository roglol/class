include includes/header.pug
body
    h1= title
    hr
    if added
        p(style={'background-color': 'seagreen', 'padding': '15px'}) Product Okay
    
    ul
        each product in productsDB
            li= product.product_name
    a(href="/products") Products List
    form(action="", method="post")
        p
            input(type="text", name="product_name", placeholder="Product Name", required)
        p
            input(type="number", name="id", placeholder="Product ID", required)
        p
            input(type="number", name="product_price", placeholder="Product Price", required)
        p
            button(type="submit") Save Product
