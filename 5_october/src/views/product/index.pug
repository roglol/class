mixin product(product)
    div.product--block 
        h2.product--title--item= product.product_name
        h4.product--price= `Price - $${product.product_price}`
        a(href=`/products/${product.product_id}`)  Details

include ../includes/header.pug
body
    h1= title
    hr
    div.wrapper
        each item in productsDB
           +product(item)
    